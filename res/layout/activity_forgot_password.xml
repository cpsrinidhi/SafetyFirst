<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/black"
    tools:context="com.example.safetyfirst.ForgotPasswordActivity" >
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentTop="false"
        android:alpha="0.5"
        android:scaleType="centerCrop"
        android:src="@drawable/uta_copy" />

    <TextView
        android:id="@+id/textViewEnterRegisteredId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editEnterRegisteredId"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:text="@string/enterRegisteredId" />

    <EditText
        android:id="@+id/editEnterRegisteredId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:ems="10"
        android:inputType="textEmailAddress" 
        android:hint="UTA Mail ID" 
        android:textColor="#FFFFFF" >
       <!-- android:layout_alignBottom="@+id/textEnterRegisteredId" --> 
        

        <requestFocus />
    </EditText>

   
    
     <Button
        android:id="@+id/buttonResendPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editEnterRegisteredId"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="34dp"
        android:text="@string/resendPassword"
        android:textColor="#FFFFFF"  />

</RelativeLayout>
